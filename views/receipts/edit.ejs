<% include ../partials/header %>
    <div class="container">
        <h1 style="text-align: center">Edit <%= receipt.foodName %> here</h1>    
        <form action="/receipts/<%= receipt._id %>?_method=PUT" method="POST">         
            <div class="form-group">
                <input class="form-control" type="text" name="receipt[foodName]" value="<%=receipt.foodName%>">
            </div>

            <div class="form-group">
                    <input class="form-control" type="text" name="receipt[image]"  value="<%=receipt.image%>">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="receipt[ingredients]"  value="<%=receipt.ingredients%>">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="receipt[author]"  value="<%=receipt.author%>">
            </div>

            <div class="form-group">
                <button class="btn btn-primary">Sumbit my Receipt!</button>
            </div>
         </form>   

        <a href="/receipts">Go Back</a>   
        <!-- the new receipt is now available at the /rceeipts route -->
    </div>  

<% include ../partials/footer %>
