<!DOCTYPE html>
<head>
    <title>
        Home
    </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> 
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.css">
</head>
<body>

<div class="ui secondary  menu">
    <a class="active item" href="/landing">
      Home
    </a>
    <a class="item">
      About
    </a>
    <a class="item">
      Contact
    </a>
    <a class="item" href="/receipts">
       Receipts
    </a>
    <div class="right menu">
      <div class="item">
        <div class="ui icon input">
          <input type="text" placeholder="Search...">
          <i class="search link icon"></i>
        </div>
        </div>
       <% if(currentUser) { %> 
            <a class="ui item">
                Signed in as <a href="/users/<%= currentUser._id %>"><%= currentUser.username %></a> 
            </a>  
            <a class="ui item" href="/logout">
                Log out
            </a>  
        <% } else {  %>    
              <a class="ui item" href="/login">
                  Log in
              </a>
              <a class="ui item" href="/register">
                  Sign up
              </a>
        <%  }   %>
    </div>
</div>


<div class="ui center aligned grid">
    <div class="column">
        <div class="field">
            <img class="ui medium circular image" src="<%=user.avatar%>">
        </div>
        <div class="content">
                <a class="header"><h1><%= user.fname %> <%= user.lname %></h1></a>
        </div>
        <div class="fields">
            <h1><%= user.username %></h1>
        </div>
    </div>
</div>

<div class="panel panel-default">
        <div class="panel-heading">My Posts</div>
        <div class="panel-body">
            
        </div>
</div>

<% include ../partials/footer %>